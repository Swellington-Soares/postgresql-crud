<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
                https://jakarta.ee/xml/ns/persistence
                https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="postgresqlPU" transaction-type="RESOURCE_LOCAL">

        <!-- Hibernate como provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>dev.swell.postgresqlcrud.domain.aluno.AlunoEntity</class>

        <properties>

            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/curso_db"/>

            <property name="jakarta.persistence.jdbc.user"
                      value="devuser"/>

            <property name="jakarta.persistence.jdbc.password"
                      value="dev1234"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>

            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>

            <property name="hibernate.show_sql"
                      value="true"/>

            <property name="hibernate.format_sql"
                      value="true"/>

            <!-- Pool simples (desenvolvimento) -->
            <property name="hibernate.connection.pool_size"
                      value="10"/>

            <!-- Charset -->
            <property name="hibernate.connection.charSet"
                      value="UTF-8"/>

        </properties>
    </persistence-unit>

</persistence>
