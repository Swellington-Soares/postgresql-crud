<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="530.0" prefWidth="757.0" spacing="8.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/17.0.14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.swell.postgresqlcrud.HelloController">
    <padding>
        <Insets bottom="8.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="34.0" prefWidth="718.0">
         <children>
            <TextField fx:id="tfBuscar" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="16.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="btnAdicionar" mnemonicParsing="false" text="Adicionar">
               <HBox.margin>
                  <Insets right="16.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label text="Lista de alunos" />
      <TableView fx:id="tbAlunos" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="columnNome" editable="false" prefWidth="75.0" text="Nome" />
          <TableColumn fx:id="columnNota1" editable="false" prefWidth="75.0" sortable="false" text="Nota 1" />
            <TableColumn fx:id="columnNota2" editable="false" prefWidth="75.0" sortable="false" text="Nota 2" />
            <TableColumn fx:id="columnNota3" editable="false" prefWidth="75.0" sortable="false" text="Nota 3" />
            <TableColumn fx:id="columnNota4" editable="false" prefWidth="75.0" sortable="false" text="Nota 4" />
            <TableColumn fx:id="columnMedia" editable="false" prefWidth="75.0" text="Média" />
            <TableColumn fx:id="columnSituacao" editable="false" prefWidth="75.0" text="Situação" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Pagination fx:id="pg" pageCount="1" prefHeight="28.0" prefWidth="718.0" />
   </children>
</VBox>
